" https://github.com/saaguero/ideavimrc/blob/master/.ideavimrc
" run in iterm first: defaults write com.jetbrains.intellij ApplePressAndHoldEnabled -bool false
set history=1000
set showcmd
set showmode
set hlsearch
set ignorecase
set smartcase
set clipboard+=unnamed

nmap <silent> // :nohlsearch<CR>

nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-h> <c-w>h
nnoremap <c-k> <c-w>k
nnoremap <silent> H gT<CR>
nnoremap <silent> L gt<CR>
